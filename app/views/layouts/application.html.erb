<!DOCTYPE html>
<html>
  <head>
    <title>Bikenavi</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/6fbc12f48f.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top" >
      <% if user_signed_in? %>
          <ul class="nav navbar-nav mr-auto">
            <li class = "nav-item">
              <%= link_to "BIKEnavi", root_path %>
            </li>
          </ul>
          <ul class="nav justify-content-end">
            <li class = "nav-item mr-5">
              <%= link_to "検索", parkings_search_path %>
            </li>
            <li class = "nav-item mr-5">
              <%= link_to "投稿", new_parking_path, data: {"turbolinks" => false} %>
            </li>
            <li class = "nav-item mr-5">
              <%= link_to "お気に入り", favorites_path %>
            </li>
            <li class = "nav-item mr-5">
              <%= link_to "マイページ", user_path(current_user), class: "noborder" %>
            </li>
            <li class = "nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          </ul>


      <% else %>
        <ul class="nav navbar-nav mr-auto">
          <li class = "nav-item">
            <%= link_to "BIKEnavi", root_path %>
          </li>
        </ul>
        <ul class="nav justify-content-end">
          <li class = "admin-login mr-5">
            <%= link_to "管理者", new_admin_user_session_path %>
          </li>
          <li class = "nav-item mr-5">
            <%= link_to "ABOUT", home_about_path %>
          </li>
          <li class = "nav-item mr-5">
            <%= link_to "ログイン", new_user_session_path %>
          </li>
          <li class = "nav-item">
            <%= link_to "会員登録", new_user_registration_path %>
          </li>
        </ul>
      <% end %>
    </header>

    <%= yield %>


    <footer class="footer-text">
      © All Rights Reserved By ぴょんす
    </footer>
  </body>
</html>

