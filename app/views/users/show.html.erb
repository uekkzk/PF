
<div class="container">


    <h1>マイページ</h1>

    <%= link_to "編集", edit_user_path, class: "btn btn-success" %>

    <div class="row">
      <div class="col-md-3">
        <div class="">
          <%= attachment_image_tag @user, :image, format: 'jpeg', size: "250x250", fallback: "no_image.jpg"%>
        </div>
      </div>

      <div class="col-md-3">
        <p>フォロー数: <%= link_to("#{@user.follower.count}", following_user_path) %></p>
      </div>

      <div class="col-md-3">
        <p>フォロワー数: <%= link_to("#{@user.followed.count}", followed_user_path) %></p>
      </div>

  </div>

<div class = "row mb-4">
  <div class = "col-md-3">
    <%= label_tag "名前" %>
  </div>
  <div class = "col-md-4">
    <%= @user.name %>
  </div>
</div>

<div class = "row mb-4">
  <div class = "col-md-3">
    <%= label_tag "乗っているバイク" %>
  </div>
  <div class = "col-md-4">
    <%= @user.bike_name %>
  </div>
</div>

<div class = "row mb-4">
  <div class = "col-md-3">
    <%= label_tag "ひとこと" %>
  </div>
  <div class = "col-md-4">
    <%= @user.introduction %>
  </div>
</div>