<div class="user-container">

  <% if flash[:success] %>
    <p><%= flash[:success] %></p>
　<% end %>

  <div class="container">

    <h1><%= @user.name %>のマイページ</h1>


    <div class="row mt-5">

      <div class="col-md-3">
        <div class="">
          <%= attachment_image_tag @user, :image, format: 'jpeg', size: "250x250", fallback: "no_image.jpg", class:"image-field"%>
        </div>
      </div>

      <div class="col-md-9">
        <div class="row">
          <div class="col-md-6 my-name">
            <%= @user.name %>
          </div>
          <div class="col-md-3">
            <% if @user == current_user %>
              <div class="my-profile">
                <%= link_to "プロフィールを編集", edit_user_path %>
              </div>
            <% end %>
          </div>
        </div>
        <div class="row mt-2">
          <div class="col-md-3 relationship">
            <p>フォロー数: <%= link_to @user.follower.count, user_following_user_path(@user) %></p>
          </div>
          <div class="col-md-3 relationship">
            <p>フォロワー数: <%= link_to @user.followed.count, user_followed_user_path(@user) %></p>
          </div>
          <div class="col-md-3">
            <% unless @user == current_user %>
              <div class="follow-btn">
                <% if current_user.following?(@user) %>
                  <%= link_to 'フォロー外す', user_relationships_path(@user.id), method: :delete,class:"btn btn-danger"%>
                <% else %>
                  <%= link_to 'フォローする', user_relationships_path(@user.id), method: :post,class:"btn btn-success" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
       <div class="row my-bike mt-2">
          <div class="col-md-2">
            <%= label_tag "Myバイク" %>
          </div>
          <div class="col-md-10">
             <%= @user.bike_name %>
          </div>
        </div>
        <div class="row my-introduction mt-2">
          <div class="col-md-2">
            <%= label_tag "ひとこと" %>
          </div>
          <div class="col-md-10">
            <%= @user.introduction %>(感情分析スコア<%= @user.score %>)
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
