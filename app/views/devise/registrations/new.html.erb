<div class="signup-container">
  <h2 class="signup-title">新規会員登録</h2>

  <%= form_for(@user) do |f|%>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="form-group">
  </div>

    <div class="signup-field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"col-md-4" %>
    </div>

    <div class="signup-field mt-2">
      <%= f.label :Eメール %><br />
      <%= f.email_field :email, autocomplete: "email", class:"col-md-4" %>
    </div>

    <div class="signup-field mt-2">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(6文字以上のパスワード)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"col-md-4" %>
    </div>

    <div class="signup-field mt-2">
      <%= f.label :パスワード確認 %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"col-md-4" %>
    </div>

    <div class="actions">
      <%= f.submit "登録" %>
    </div>
  <% end %>
</div>